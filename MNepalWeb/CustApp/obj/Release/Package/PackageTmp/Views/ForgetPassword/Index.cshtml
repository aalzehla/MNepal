    <!-- jQuery Form Validation code -->
    <script type="text/javascript">
        function checkValidation() {
            var uName = $("[name='txtUserName']").val();

            if (uName.trim() == "") {
                $("#MobNo").html("");
                $("#MobNo").append("<small>" + "Please Enter the Mobile Number" + "</small>");
                $("#MobNo").show();
                $('#btnSubmit').attr('disabled', 'disabled');
            }
            else if ((uName.substring(0, 2) != "98")) {
                $("#MobNo").html("");
                $("#MobNo").append("<small>" + "Mobile number must start with 98" + "</small>");
                $("#MobNo").show();
                $('#btnSubmit').attr('disabled', 'disabled');
            }
            else if (uName.length != 10) {
                $("#MobNo").html("");
                $("#MobNo").append("<small>" + "Mobile number must be of 10 digits" + "</small>");
                $("#MobNo").show();
                $('#btnSubmit').attr('disabled', 'disabled');
            }
            else {
                $("#MobNo").hide();
                $('#btnSubmit').removeAttr('disabled');
            }
        }
            function isNumber(evt) {
                evt = (evt) ? evt : window.event;
                var charCode = (evt.which) ? evt.which : evt.keyCode;
                if (charCode > 31 && (charCode < 48 || charCode > 57)) {
                    return false;
                }
                return true;
                
            }

            

        $("#btnSubmit").on('click', function (event) {
            event.preventDefault();
            var uName = $("[name='txtUserName']").val();

            if (uName.trim() == "") {
                $("#MobNo").html("");
                $("#MobNo").append("<small>" + "Please Enter the Mobile Number" + "</small>");
                $("#MobNo").show();
                $('#btnSubmit').attr('disabled', 'disabled');
            }
            else if ((uName.substring(0, 2) != "98")) {
                $("#MobNo").html("");
                $("#MobNo").append("<small>" + "Mobile number must start with 98" + "</small>");
                $("#MobNo").show();
                $('#btnSubmit').attr('disabled', 'disabled');
            }
            else if (uName.length != 10) {
                $("#MobNo").html("");
                $("#MobNo").append("<small>" + "Mobile number must be of 10 digits" + "</small>");
                $("#MobNo").show();
                $('#btnSubmit').attr('disabled', 'disabled');
            }
            else {
                $("#MobNo").hide();
                $('#btnSubmit').removeAttr('disabled');

                var id = $("#userName").val(); 
                $.ajax({
                    cache: false,
                    type: "GET",
                    url: '@Url.Action("GetCheckingUserName", "ForgetPassword")',
                    data: { "Username": id },
                    success: function (data, result) { 
                        var markup = data;
                        if (data == "Success") {
                            var form = document.getElementById("frmRecover");
                            form.submit();
                        }
                        else if (data == "Blocked"){
                            $('#btnSubmit').attr('disabled', 'disabled');
                            $('#headmessage').html("\n Invalid");
                            $('#message').html("\n You have already attempt 3 times with wrong password,Please try again after 1 hour.");
                          
                            $('#failureModal').modal("show");
                            $('#userName').val("");

                            
                        }else {
                            $('#btnSubmit').attr('disabled', 'disabled');
                            $('#message').html("Please enter a valid mobile number.");
                            $('#failureModal').modal("show");
                            $('#userName').val("");

                            //$('#failureModal').modal("show");
                            //$("#check").html("");
                            //$("#check").css("color", "red");
                            //$("#check").html("Not Registered ").show();
                        }
                    },
                    error: function () {
                        alert("Data Not Found");
                    }
                });
            }

            
         });

