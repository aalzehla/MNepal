    <!-- Failure modal -->
    <div class="modal fade common-modal" id="failureModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <div class="success-icon">
                        <img src="~/Content/assets/img/denied-cross.svg" alt="">
                    </div>
                    <p style="color: #e31837; font-size: 20px; font-weight: 700;">Invalid Verification Code</p>
                    <span style="color: #002d6a; font-size: 18px; font-weight: 400;" id="message">@this.TempData["recover_message"]</span>
                    <br /> <br />
                    <button type="button" class="btn btn-blue" data-dismiss="modal" style="width:80%">OK</button>
                </div>
            </div>
        </div>
    </div>

    <div class="main-content">

        <div class="hero-bg text-center" style="background-image: url(@backgroundLink); ">
            <div class="container">
                <a href="@loginLink" class="logo">
                    <img src="~/Content/assets/img/thaili-logo.svg" alt="" />

                </a>
                <!-- /logo -->

                <div class="form-wrapper">

                    @using (Html.BeginForm("Recover", "ForgetPassword", FormMethod.Post, new
                    {
                        @id = "RecoverForm",
                        @class = "otp-verification-form common-form"
                    }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        if (this.TempData["recover_message"] != null)
                        {
                            if (this.TempData["message_class"].ToString() == "success_info")
                            {

                                <div class="alert alert-success">
                                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                                    <h4>Success</h4> @this.TempData["recover_message"]
                                </div>
                            }
                            else
                            {

                                <script>$('#failureModal').modal();</script>
                                @*<div class="alert alert-danger">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <h4>Error</h4> @this.TempData["recover_message"]
                    </div>*@
                            }
                        }

                        <label for="" class="control-label">OTP Code Verification</label>
                        <input type="text" id="verificationCode" name="txtVerificationCode" class="form-control" placeholder="Enter Verification Code" onkeypress="return isNumber(event)" maxlength="6" pattern="[0-9]\d*" min="0" step="1" onchange="checkValidation()"  onpaste="return false" />
                        <div id="VerificationCode" style="color:red;"></div>

                        <div class="button-wrapper">
                            <button type="submit" class="btn btn-blue" id="btnSubmit" onclick="checkValidation()">Verify</button>
                        </div>
                        <span class="info">Enter the code received via SMS</span>
                        <div style="margin-top:5px;">
                            <span class="account-info">Did not get your code? <a href="~/ForgetPassword/ResendCode">Resend Code</a></span>
                        </div>

                    }

