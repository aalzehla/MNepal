                                        <div class="alert danger-alert" role="alert">
                                            @*<button type="button" class="close" data-dismiss="alert">&times;</button>*@
                                            <i class="far fa-info-circle"></i> <span>@this.ViewData["password_messsage"]</span>
                                        </div>
                                    }
