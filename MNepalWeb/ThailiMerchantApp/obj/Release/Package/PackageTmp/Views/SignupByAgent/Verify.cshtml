    <!-- Failure modal -->
    <div class="modal fade common-modal" id="failureModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <div class="success-icon">
                        <img src="~/Content/assets/img/denied-cross.svg" alt="denied-cross">
                    </div>
                    <p style="color: #e31837; font-size: 20px; font-weight: 700;">@this.TempData["message_topic"]</p>
                    <span style="color: #002d6a; font-size: 18px; font-weight: 400;" id="message">@this.TempData["recover_msg"]</span>
                    <br /> <br />
                    <button type="button" class="btn btn-blue" data-dismiss="modal" style="width:80%">OK</button>
                </div>
            </div>
        </div>
    </div>

    <div class="main-content">
        <div class="hero-bg text-center" style="background-image: url(@backgroundLink); ">
            <div class="container">
                <a href="@loginLink" class="logo">
                    <img src="~/Content/assets/img/thaili-logo.svg" alt="thaili-logo" />

                </a>
                <!-- /logo -->

                <div class="form-wrapper">

                    @using (Html.BeginForm("Verify", "SignupByAgent", FormMethod.Post, new
                    {
                        @id = "VerifyForm",
                        @class = "form  center-block"
                    }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        if (this.TempData["recover_msg"] != null)
                        {
                            if (this.TempData["message_class"].ToString() == "success_info")
                            {
                                <div class="alert alert-success">
                                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                                    <h4>Success</h4> @this.ViewData["recover_msg"]
                                </div>
                            }
                            else
                            {
                                <script>$('#failureModal').modal();</script>

                                @*<div class="alert alert-danger">
                                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                                        <h4>Error</h4> @this.ViewData["recover_message"]
                                    </div>*@
                            }
                        }

                        <input type="text" id="verificationCode" name="txtVerificationCode" class="form-control" placeholder="SMS PIN Verification" pattern="[0-9]\d*" min="0" step="1" onkeypress="return isNumber(event)" onchange="checkValidation()" maxlength="6" onpaste="return false" />
                        <div id="verifyCode" style="color:red;"></div>

                        <div class="button-wrapper">
                            <button type="submit" class="btn btn-blue" onclick="checkValidation()" id="btnSubmit">Verify</button>

                        </div>
                        <span class="info">Enter the code received via SMS</span>
                        <div style="margin-top:5px;">
                            <span class="account-info">Did not get your code? <a href="~/SignupByAgent/ResendCode">Resend Code</a></span>
                        </div>

                    }
                    <!-- /Login form -->
                </div>
                <!-- /form-wrapper -->

                <div class="two-col text-left">
                    <div class="row align-items-end">
                        <div class="col-md-6 google-play">
