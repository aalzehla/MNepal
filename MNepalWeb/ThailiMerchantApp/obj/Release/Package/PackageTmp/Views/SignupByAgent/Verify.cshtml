    <!-- jQuery Form Validation code -->
    <script type="text/javascript">
        function isNumber(evt) {
            evt = (evt) ? evt : window.event;
            var charCode = (evt.which) ? evt.which : evt.keyCode;
            if (charCode > 31 && (charCode < 48 || charCode > 57)) {
                return false;
            }
            return true;
        }

        $("#verifyCode").hide();

        function checkValidation() {
            var veriCode = $("[name='txtVerificationCode']").val();

            if (veriCode.trim() == "") {
                $("#verifyCode").html("");
                $("#verifyCode").append("<small>" + "Please Enter the Verification Code" + "</small>");
                $("#verifyCode").show();
                $('#btnSubmit').attr('disabled', 'disabled');
            }
            else if (veriCode.length < 6) {
                $("#verifyCode").html("");
                $("#verifyCode").append("<small>" + "Verification Code must be of 6 digits" + "</small>");
                $("#verifyCode").show();
                $('#btnSubmit').attr('disabled', 'disabled');
            }
            else {
                $("#verifyCode").hide();
                $('#btnSubmit').removeAttr('disabled');
            }
        }

