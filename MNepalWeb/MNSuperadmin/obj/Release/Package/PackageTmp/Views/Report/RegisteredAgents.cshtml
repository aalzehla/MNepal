@model MNSuperadmin.ViewModel.RegCusDetailVM
@{
    ViewBag.Title = "Registered Agents Report";
}

<!-- =============================================== -->
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Report
