@model MNSuperadmin.ViewModel.FinancialReportVM
@{
    ViewBag.Title = "Financial Report";
}
<!-- =============================================== -->
<!-- Content Header (Page header) -->
<link href="~/Content/plugins/jquery-ui/jquery-ui-1.12.1.custom/jquery-ui.css" rel="stylesheet" />
<section class="content-header">
    <h1>
        Report
        <small>Financial Report</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-user"></i>Report</a></li>
        <li class="active">Financial Report</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Main row -->
    <div class="row">
        <!-- Start -->
        <div class="col-xs-12">

            <!--/.box -box-primary-->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Financial Report</h3>
                </div>
                <!-- /.box-header -->

                <div class="box-body">
                    <br />
                    <div class="row">
                        <div class="col-md-6">
                            <span style="color:red">@ViewBag.Error</span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group">
                            <div id="UserId" class="col-md-4 form-group">
                                <label>Mobile Number</label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="glyphicon glyphicon-phone" style="color:royalblue"></i>
                                    </div>
                                    @Html.TextBox("ContactNumber1", null, new
                               {
                                   @class = "form-control",
                                   @required = "required",
                                   @Id = "ContactNumber1",
                                   @maxlength = 10,
                                   @pattern = "^[9][8][0-9]{8}$",
                                   @data_bv_regexp_message = "Mobile Number is not in valid Format"
                               })
                                </div>
                            </div>
                            <span id="message"></span>
                        </div>
                    </div>

                    <div class="box-footer">
                        <input type="submit" class="btn btn-primary" id="btnSearch" name="txtSearch" value="Search" />
                    </div>
                </div>

                <!--/.box -box-danger-->
                <div id="data" class="box box-primary">
                    <div class="box-body" id="grid">
                        <span class="fa fa-2x fa-file-excel-o pull-right" style="color:green;display:none;" title="To Excel" id="ToExcel"></span>
                        <table id="SearchResultTable" class="table table-striped table-bordered" style="display:none;overflow-x:scroll">
                            <thead>
                                <tr>
                                    <th style="width:53px;">Date</th>
                                    <th style="width:80px;">CustomerName</th>
                                    <th style="width:50px;">Amount</th>
                                    <th style="width:55px;">TranID</th>
                                    <th style="width:100px;">TransactionType</th>
                                    <th style="width:100px;">MobileNumber</th>
                                    <th style="width:100px;">TargetNumber</th>
                                    <th style="width:55px;">Status</th>
                                    <th style="width:55px;">Message</th>
                                </tr>
                            </thead>
                            
                        </table>
                    </div>
                    <div class="overlay" id="loading" style="display:none;">
                        <i class="fa fa-refresh fa-spin"></i>
                    </div>
                </div>
                <!--/.box -box-danger-->

            </div>
            <!--/.box -box-primary-->

        </div>
        <!-- /.col-xs--->
        <!-- End-->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<!-- =============================================== -->


@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {

            var changed = "F";
            $('#ContactNumber1').on('input propertychange paste', function () {
                changed = "T";
            });

            var table;
             $('#ToExcel').click(function () {
                 var UserName = $('#ContactNumber1').val();
                 var Parachanged = changed;
                $.ajax({
                    url: "@Url.Action("FinancialReportTable", "Report")",
                    data: {
                        UserName : UserName,
                        change: Parachanged,
                        ToExcel: 'T'
                    },
                    type: 'POST',
                    success: function (data) {
                        var url = "@Url.Action("Download", "Report")";
                        window.location = url + '?fileGuid=' + data.FileGuid
                           + '&filename=' + data.FileName;
                    },
                    error: function (data) {

                    }


                });
            });

            $('#btnSearch').click(function () {
                
                changed = "T";
                var UserName = $('#ContactNumber1').val();
                if (UserName.trim().length <= 0)
                {
                    $('#ContactNumber1').focus();
                    alertify.error('Please enter mobile number');
                    return;
                }
                var Parachanged = changed;
                if ($.fn.DataTable.isDataTable('#SearchResultTable')) {
                    table.destroy();
                }
                $('#loading').show();
                $('#btnSearch').prop("disabled", true);
                table = $('#SearchResultTable').DataTable({
                    searching: false,
                    "proccessing": true,
                    "serverSide": true,
                    "aaSorting": [],
                    "ajax": {
                        data: function (d) {
                            d.ContactNumber1 = UserName;
                            d.change = Parachanged;
                        },
                        url: "@Url.Action("FinancialReportTable", "Report")",
                        type: 'POST',
                    },
                    "drawCallback": function (settings) {
                        
                        changed = "F";
                        Parachanged = changed;
                        $('#SearchResultTable').show();
                        if (settings.json.recordsTotal > 0)
                            $('#ToExcel').show();
                        else
                            $('#ToExcel').hide();
                        $('#loading').hide();
                        $('#btnSearch').prop("disabled", false);
                    },
                    "columns": [
                        { "data": "Date" },
                        { "data": "CustomerName", sortable: true },
                        { "data": "Amount"},
                        { "data": "TranID" },
                        { "data": "TransactionType" },
                        { "data": "MobileNumber" },
                        { "data": "TargetNumber" },
                        { "data": "Status" },
                        { "data": "Message" }
                    ]

                });
            });

            $('#grid').on("DOMSubtreeModified", function () {
                changed = "F";
            });
            
        });


    </script>
}


