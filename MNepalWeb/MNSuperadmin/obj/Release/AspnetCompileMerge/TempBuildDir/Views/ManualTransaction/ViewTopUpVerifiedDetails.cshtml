<!-- /.content -->
@section scripts {
    <script type="text/javascript">

        $(document).ready(function () {
            //$('#TranStatus').hide();
            //$('#Verify').hide();
            //$('#CheckBalance').hide();
            //$('#BalanceStatus').hide();

        });

        $('#GetDetails').click(function (e) {
            $('#TranStatus').show();
            $('#CheckBalance').show();
        });
        $('#CheckBalance').click(function (e) {
            debugger;
            var merchantID = $("[name='MerchantID']").val();
            var amount = $("[name='Amount']").val();

            if (merchantID != "") {

                e.preventDefault(); //prevent the default action
                $.ajax({
                cache: false,
                async: true,
                type: "GET",
                    url: '@Url.Action("BankQuery", "ManualTransaction")',
                    data: { "merchantID": merchantID, "Amount": amount },
                success: function (data, textStatus, jqXHR) {

                    if (data.responseCode == "200") {
                        debugger;
                        var resp = data.responseText;
                        $("#BalStatus").val(resp);
                        $('#BalanceStatus').show();
                        $('#Verify').show();

                    }

                },
                error: function () {
                    alert("Data Not Found");

                }
                });

            }

        });


    </script>
}
