                //        }
                //    }
                //},
                txtWBankCode: {
                    validators: {
                        notEmpty: {
                            message: 'The WalletNumber is required and cannot be empty'
                        }
                    }
                },
                txtWalletNumber: {
                    validators: {
                        notEmpty: {
                            message: 'The WalletNumber is required and cannot be empty'
                        },
                        stringLength: {
                            max: 20,
                            min: 8,
                            message: 'The WalletNumber must be more than 8 and less than 20 characters long'
                        }
                    }
                },
                txtBankNoBin: {
                    validators: {
                        stringLength: {
                            max: 4,
                            min: 4,
                            message: 'The WalletNumber must be 4 numeric digit'
                        }
                    }
                },
                MerchantCategory: {
                    validators: {
                        notEmpty: {
                            message: 'The Zone is required and cannot be empty'
                        }
                    }
                },
                txtContactNumber2: {
                    validators: {
                        regexp: {
                            regexp: /^[9][8][0-9]{8}$/,
                            message:'Input value is not a valid mobile format'
                        }
                        //notEmpty: {
                        //    message: 'The mobile number is required and cannot be empty'
                        //}
                    }
                },
                BankNoBin: {
                    validators: {
                        notEmpty: {
                            message: 'Bank is required and cannot be empty'
                        }
                    }
                }



            }
        });

    });
    </script>
}

