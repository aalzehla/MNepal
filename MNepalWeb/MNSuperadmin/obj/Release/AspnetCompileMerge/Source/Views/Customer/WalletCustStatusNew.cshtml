
@model MNSuperadmin.ViewModel.RegCusDetailVM
@{
    ViewBag.Title = "WalletCustStatusNew";

    List<SelectListItem> HasKYC = new List<SelectListItem>();
    //Status.Add(new SelectListItem { Text = "All", Value = " " });
    HasKYC.Add(new SelectListItem { Text = "Verified", Value = "T" });
    HasKYC.Add(new SelectListItem { Text = "NotVerified", Value = "F" });
    HasKYC.Add(new SelectListItem { Text = "Pending", Value = "P" }); 
}
<link href="~/Content/plugins/jquery-ui/jquery-ui-1.12.1.custom/jquery-ui.css" rel="stylesheet" />
<style>
    thead input {
        width: 100%;
        padding: 3px;
        box-sizing: border-box;
        color: black;
    }
</style>

<!-- =============================================== -->
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Report
        <small>WalletCustStatusNew</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-user"></i>Customer</a></li>
        <li class="active">WalletCustStatusNew</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Main row -->
    <div class="row">

        <!-- Start -->
        <div class="col-xs-12">

            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Wallet Customer Status</h3>
                </div>
                <div class="box-body">
                    <br />
                    <div class="row">
                        <div class="col-md-6">
                            <span style="color:red">@ViewBag.error</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group" id="form">
                            <div id="BranchCode" class="col-md-6 form-group" style="display:none;">
                                <label>Branch Code</label>
                            </div> 

                            <div id="MobileNo" class="col-md-4 form-group">
                                <label>Mobile No</label>
                                @Html.TextBoxFor(x => x.Parameter.MobileNo, new { @class = "form-control", @maxlength = "10", pattern = @"[9][8][0-9]{8}", @id = "MobileNumber", @onkeypress = "return isNumber(event)" })
                            </div>
                            <div class="col-md-4 form-group">
                                <label>Customer Name</label>
                                @Html.TextBoxFor(x => x.Parameter.CustomerName, new { @class = "form-control", @id = "CustomerName" })
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>KYCStatus</label>
                                    @Html.DropDownList("Parameter.HasKYC", new SelectList(HasKYC, "Value", "Text"), "--Select--", new { @class = " form-control select2", @style = "width: 100%;", @id = "HasKYC" })
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <input type="submit" class="btn btn-primary" id="btnSearch" name="txtSearch" value="Search" />
                </div>
            </div>
            <div id="data" class="box box-primary">
                <div class="box-body" id="grid">
                    <span class="fa fa-2x fa-file-excel-o pull-right" style="color:green;display:none;" title="To Excel" id="ToExcel"></span>
                    <table id="SearchResultTable" class="table table-striped table-bordered" style="display:none">
                        <thead>
                            <tr>
                                <th>Mobile No</th>
                                <th>Customer Name</th>
                                <th>Created By</th>
                                <th>KYC Status</th>
                                <th>Details</th> 
                            </tr>
                        </thead>
                    </table>
                </div>
                <div class="overlay" id="loading" style="display:none;">
                    <i class="fa fa-refresh fa-spin"></i>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- /.content -->
<!-- =============================================== -->

@section scripts{
    <script src="~/Content/plugins/jquery-ui/jquery-ui-1.12.1.custom/jquery-ui.js"></script>
    <script>
        function isNumber(evt) {
            evt = (evt) ? evt : window.event;
            var charCode = (evt.which) ? evt.which : evt.keyCode;
            if (charCode > 31 && (charCode < 48 || charCode > 57)) {
                return false;
            }
            return true;
        }
        $(document).ready(function () {

            var changed = "T";
                $('#MobileNumber,#CustomerName').on('input propertychange paste', function () {

                changed = "T";
            });
            $('#HasKYC').on('change', function () {
                changed = "T";
            });

            var table;
            $('#ToExcel').click(function () {
                var MobileNumber = $('#MobileNumber').val();
                var CustomerName = $('#CustomerName').val();
                var HasKYC = $('#HasKYC').val();

                var Parachanged = changed;
                $.ajax({
                    url: "@Url.Action("WalletCustStatusNewTable", "Customer")",
                    data: {
                        MobileNo: MobileNumber,
                        CustomerName: CustomerName,
                        change: Parachanged,
                        HasKYC: HasKYC,
                        ToExcel: 'T'
                    },
                    type: 'POST',
                    success: function (data) {
                        var url = "@Url.Action("Download", "Customer")";
                        window.location = url + '?fileGuid=' + data.FileGuid
                           + '&filename=' + data.FileName;
                        /*window.open(url + '?fileGuid=' + data.FileGuid
                           + '&filename=' + data.FileName, '_blank');*/
                    },
                    error: function (data) {

                    }


                });
            });
            $('#btnSearch').click(function () {
                changed = "T";
                var MobileNumber = $('#MobileNumber').val();
                var CustomerName = $('#CustomerName').val();
                var HasKYC = $('#HasKYC').val();
                var Parachanged = changed;
                if ($.fn.DataTable.isDataTable('#SearchResultTable')) {
                    table.destroy();
                }
                $('#loading').show();
                $('#btnSearch').prop("disabled", true);
                table = $('#SearchResultTable').DataTable({

                    searching: false,
                    "proccessing": true,
                    "serverSide": true,
                    "aaSorting": [],
                    orderCellsTop: true,
                    fixedHeader: true,
                    "ajax": {
                        data: function (d) {
                            d.MobileNumber = MobileNumber;
                            d.CustomerName = CustomerName;
                            d.change = Parachanged;
                            d.HasKYC = HasKYC; 
                        },
                        url: "@Url.Action("WalletCustStatusNewTable", "Customer")",
                        type: 'POST',

                    },
                    "columns": [
                           { "data": "MobileNo" },
                           { "data": "CustomerName" },
                           { "data": "CreatedBy" },

                         //{ "defaultContent": "Self Registration" },  
                           {
                            data: "HasKYC", render: function (data, type, row) {
                                if (data == 'T') { 
                                    return ' Verified'; 
                                }

                                if (data == 'F') { 
                                    return 'Not Verified'; 
                                }

                                if (data == 'P') {
                                    return 'Pending';
                                }
                            }
                        },
                            
                           { "data": "ClientCode",
                               "render": function (data)
                               {
                                   return "<a href='../Customer/ViewSelfRegDetailWalletCustStatus/" + data + "'><i class='fa fa-eye' style='margin-left: 91px;'></i></a>"
                               }
                           }, 
                    ],
                    "drawCallback": function (settings) {
                        changed = "F";
                        Parachanged = changed;
                        $('#SearchResultTable').show();
                        if (settings.json.recordsTotal > 0)
                            $('#ToExcel').show();
                        else
                            $('#ToExcel').hide();
                        $('#loading').hide();
                        $('#btnSearch').prop("disabled", false);
                    },

                });

            });
            $('#grid').on("DOMSubtreeModified", function () {
                changed = "F";
            });
        });

        $(document).ready(function () {
            $.validator.addMethod("pattern", function (value, element, param) {
                if (this.optional(element)) {
                    return true;
                }
                if (typeof param === "string") {
                    param = new RegExp("^(?:" + param + ")$");
                }
                return param.test(value);
            }, "Invalid format.");
            $('#Registerform').validate({
                highlight: function (label) {
                    $(label).closest('.form-group').addClass('has-error');
                },
                unhighlight: function (label) {
                    $(label).closest('.form-group').removeClass('has-error');
                }
            });
            function isNumber(evt) {
                evt = (evt) ? evt : window.event;
                var charCode = (evt.which) ? evt.which : evt.keyCode;
                if (charCode > 31 && (charCode < 48 || charCode > 57)) {
                    return false;
                }
                return true;
            } 
        }); 
    </script>
}




