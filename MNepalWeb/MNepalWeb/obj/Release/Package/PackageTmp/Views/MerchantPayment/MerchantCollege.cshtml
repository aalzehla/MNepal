                                <div class="col-sm-8">
                                    @Html.DropDownListFor(model => model.CollegeName, new SelectList(ViewBag.College, "Value", "Text"), new { @class = "form-control", @required = "required", @style = "width: 100%;", @id = "CollegeName", @placeholder = "First Name" })

