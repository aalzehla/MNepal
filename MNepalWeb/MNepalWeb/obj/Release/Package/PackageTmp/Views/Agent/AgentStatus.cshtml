
@{
    ViewBag.Title = "AgentStatus";
}

<!-- =============================================== -->
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Agent Status
        <small>Status</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-user"></i> Agent</a></li>
        <li class="active"> AgentStatus</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Main row -->
    <div class="row">

        <!-- Start -->

        <div class="col-xs-12">

            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Agent Status</h3>
                </div>
                <!-- /.box-header -->

                @Html.Partial("_PartialSearch")

                <!-- /.box-body -->
                
            </div>
            <!--/.box -box-danger-->

            <!-- Start Data Show in Table -->

            @Html.Action("AgentDetailView")
            
            <!-- End Data Show in Table -->

        </div>
        <!-- /.col-xs--->
        <!-- End-->

    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<!-- =============================================== -->

@section scripts{

    <script type="text/javascript">

        $("#MobileNo").hide();
        $("#Name").hide();
        $("#AccountNo").hide();
        $("#AgentDetailView").hide();

        $("input[type='radio']").change(function () {

            if ($(this).val() == "Mobile Number") {
                $("#MobileNo").show();
                $("#Name").hide();
                $("#AccountNo").hide();
            }
            else if ($(this).val() == "Name") {
                $("#Name").show();
                $("#AccountNo").hide();
                $("#MobileNo").hide();
            }
            else if ($(this).val() == "Account Number") {
                $("#AccountNo").show();
                $("#MobileNo").hide();
                $("#Name").hide();
            }
            else if ($(this).val() == "Name/Account") {
                $("#Name").show();
                $("#AccountNo").show();
                $("#MobileNo").hide();
            } else {
                $("#MobileNo").hide();
                $("#Name").hide();
                $("#AccountNo").hide();
            }

        });


        $('#btnSearch').click(function (e) {

            var mobileNo = $('#txtMobileNoID').val();
            var name = $('#txtNameID').val();
            var accountNo = $('#txtAccountNoID').val();

            e.preventDefault();

            $.ajax({
                url: '@Url.Action("AgentDetailView", "Agent")',
                type: 'GET',
                data: {
                    txtMobileNo: mobileNo,
                    txtName: name,
                    txtAccountNo: accountNo
                },
                success: function (results) {
                    //debugger;
                    $('#AgentDetailView').html(results);
                    $("#AgentDetailView").show();
                },
                error: function () {
                    //debugger;
                    alert('Error Occured!!');
                }
            });

        });
    </script>
}

