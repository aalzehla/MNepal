
@{
    ViewBag.Title = "ApproveList";
}

<section class="content-header">
    <h1>
        @ViewContext.RouteData.Values["Action"].ToString()
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> @ViewContext.RouteData.Values["Controller"].ToString()</a></li>
        <li class="active">@ViewContext.RouteData.Values["Action"].ToString() </li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Main row -->
    <div class="row">
        <div class="col-md-12">
            <!-- Start Form -->
            <!-- Start Data Show in Table -->
            <div id="CustomerApprove" class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Customer Approve</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">

                    @if (ViewData["dtableCustApprove"] == null)
                    {
                        <div class="panel-body">
                            <b>No Result Found !! </b>
                        </div>
                    }
                    else if (ViewData["dtableCustApprove"] != null)
                    {
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Mobile Number</th>
                                    <th>Customer Name</th>
                                    <th>Address</th>
                                    <th>Branch Name</th>
                                    <th>Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (System.Data.DataRow dr in (ViewData["dtableCustApprove"] as System.Data.DataTable).Rows)
                                {
                                <tr>
                                    <td> @dr["MobileNumber"] </td>
                                    <td> @dr["Name"] </td>
                                    <td> @dr["Address"] </td>
                                    <td> @dr["BranchName"] </td>
                                    <td>
                                        <a href="@Url.Action("ViewApprove", "Customer", new {clientCodeID = @dr["ClientCode"]})"><i class="fa fa-eye"></i></a>
                                    </td>
                                </tr>
                                } <!-- for each end-->
                            </tbody>
                        </table>
                    }

                </div>
            </div>
            <!-- End Data Show in Table -->
            <!--End Form -->
        </div>
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
