
@{
    ViewBag.Title = "CustomerStatus";
}

<!-- =============================================== -->
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Customer
        <small>Status</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-user"></i> Customer</a></li>
        <li class="active"> Customer Status</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Main row -->
    <div class="row">

        <!-- Start -->

        <div class="col-xs-12">

            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Customer Status</h3>
                </div>
                <!-- /.box-header -->

                @Html.Partial("_PartialSearch")
                
            </div>
            <!--/.box -box-danger-->

            <!-- Start Data Show in Table -->

            @Html.Action("CustomerDetail")

            <!-- End Data Show in Table -->

        </div>
        <!-- /.col-xs--->
        <!-- End-->

    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<!-- =============================================== -->

@section scripts{

    <script type="text/javascript">

        $("#MobileNo").hide();
        $("#Name").hide();
        $("#AccountNo").hide();
        $("#CustomerStatus").hide();

        $("input[type='radio']").change(function () {

            if ($(this).val() == "Mobile Number") {
                $("#MobileNo").show();
                $("#Name").hide();
                $("#AccountNo").hide();
            }
            else if ($(this).val() == "Name") {
                $("#Name").show();
                $("#AccountNo").hide();
                $("#MobileNo").hide();
            }
            else if ($(this).val() == "Account Number") {
                $("#AccountNo").show();
                $("#MobileNo").hide();
                $("#Name").hide();
            }
            else if ($(this).val() == "Name/Account") {
                $("#Name").show();
                $("#AccountNo").show();
                $("#MobileNo").hide();
            } else {
                $("#MobileNo").hide();
                $("#Name").hide();
                $("#AccountNo").hide();
            }

        });


        $('#btnSearch').click(function (e) {

            var mobileNo = $('#txtMobileNoID').val();
            var name = $('#txtNameID').val();
            var accountNo = $('#txtAccountNoID').val();

            var SearchCol;

            var radios = document.getElementsByName('optionsRadios');
            for (var j = 0; j < radios.length; j++) {
                if (radios[j].checked) {
                    //debugger;
                    SearchCol = radios[j].value;
                    break;
                }
            }

            e.preventDefault();

            $.ajax({
                url: '@Url.Action("CustomerDetail","Customer")',
                type: 'GET',
                data: {
                    SearchCol: SearchCol,
                    txtMobileNo: mobileNo,
                    txtName: name, 
                    txtAccountNo: accountNo
                },
                success: function (results) {
                    //debugger;
                    $('#CustomerStatus').html(results);
                    $("#CustomerStatus").show();
                },
                error: function () {
                    //debugger;
                    alert('Error Occured!!');
                }
            });

        });
    </script>
}
