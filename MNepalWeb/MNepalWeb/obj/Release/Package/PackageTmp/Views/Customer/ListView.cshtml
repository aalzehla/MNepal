        function isNumberKey(evt) {
            evt = (evt) ? evt : window.event;
            var charCode = (evt.which) ? evt.which : evt.keyCode;
            if (charCode != 46 && charCode > 31
                && (charCode < 48 || charCode > 57))
                return false;

            return true;
        }              


        $('#btnSearch').click(function (e) {

            var mobileNo = $('#txtMobileNoID').val();
            var name = $('#txtNameID').val();
            var accountNo = $('#txtAccountNoID').val();

            var SearchCol;

            var radios = document.getElementsByName('optionsRadios');
            for (var j = 0; j < radios.length; j++) {
                if (radios[j].checked) {
                    //debugger;
                    SearchCol = radios[j].value;
                    break;
                }
            }

            e.preventDefault();

            $.ajax({
                url: '@Url.Action("CustomerModifyDetail", "Customer")',
                type: 'GET',
                data: {
                    SearchCol: SearchCol,
                    txtMobileNo: mobileNo,
                    txtName: name,
                    txtAccountNo: accountNo
                },
                success: function (results) {
                    //debugger;
                    $('#data').html(results);
                    
                },
                error: function () {
                    //debugger;
                    alert('Error Occured!!');
                }
            });

        });

        //test//

