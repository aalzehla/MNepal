@model IEnumerable<MNepalWeb.Models.UserInfo>
@{
    ViewBag.Title = "Renew";
}

<section class="content-header">
    <h1>
        Customer
        <small>Customer Charge</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-user"></i> Customer</a></li>
        <li class="active">Customer Charge</li>
        <li class="active">Expiration</li>
    </ol>
</section>
<section class="content">
    <!-- Main row -->
    <div class="row">
        <!-- Start -->
        <div class="col-xs-12">
            @using (Html.BeginForm("Renew", "Customer", FormMethod.Get))
            {

                if (this.ViewData["Custmessage"] != null)
                {
                    if (this.ViewData["messageclass"].ToString() == "success_info")
                    {
                        <div class="alert alert-success">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <h4>Success</h4> @this.ViewData["Custmessage"]
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <h4>Error</h4> @this.ViewData["Custmessage"]
                        </div>
                    }
                }
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Customer Expiry</h3>
                    </div>
                    <!-- /.box-header -->

                    <div class="box-body">
                        <div class="row">
                            <br />
                            <div class="row">
                                <div class="col-md-6">
                                    @* <span style="color:red">@ViewBag.Error</span>*@
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-4 form-group">
                                    <label>Mobile Number</label>
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="glyphicon glyphicon-phone" style="color:royalblue"></i>
                                        </div>
                                        @Html.TextBox("UserName",ViewBag.UserName as string, new { @class = "form-control", @Id = "UserName", @maxlength = 10 })
                               
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="box-footer">
                        <input type="submit" class="btn btn-primary" id="Search" name="txtSearch" value="Search" />
                    </div>

                </div>
            }
            <div id="data" class="box box-primary">
                <div class="box-body" id="grid">
                  @if(Model.Count()>0)
                  {

                    <table id="SearchResultTable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>UserName</th>
                                <th>Name</th>
                                <th>Created Date</th>
                                <th>ProfileName</th>
                                <th>BankAccountNumber</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                                <tr>
                                    <td>@item.UserName</td>
                                    <td>@item.Name</td>
                                    <td>@item.CreatedDate</td>
                                    <td>@item.ProfileName</td>
                                    <td>@item.BankAccountNumber</td>
                                    <td>@item.Status</td>
                                    <td>
                                        <a href="@Url.Action("RenewCust", "Customer", new { id = item.ClientCode })">Renew</a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                  }
                  else
                  {
                      <h4>No Record(s)</h4>
                  }
                </div>
               
            </div>
        </div>
    </div>
    <!-- /.row -->
</section>
