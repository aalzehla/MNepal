@{
    ViewBag.Title = "Detail";
    Layout = null;
}

<!-- Start Data Show in Table -->
<div id="CustomerStatus" class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Customer Status</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">

        @if (ViewData["dtableCustomerStatus"] == null)
        {
            <div class="panel-body"> <b>No Result Found !! </b> </div>
        }
        else if (ViewData["dtableCustomerStatus"] != null)
        {
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th>UserName</th>
                    <th>Name</th>
                    <th>ContactNumber1</th>
                    <th>Status</th>
                    <th>IsApproved</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (System.Data.DataRow dr in (ViewData["dtableCustomerStatus"] as System.Data.DataTable).Rows)
                {
                    <tr>
                        <td> @dr["UserName"] </td>
                        <td> @dr["Name"] </td>
                        <td> @dr["ContactNumber1"] </td>
                        <td> 
                        @if (@dr["Status"].ToString() == "Active")
                        {
                            <span class="badge bg-green-active"> @dr["Status"] </span>
                        }
                        else
                        {
                            <span class="badge bg-red-active"> @dr["Status"] </span>
                        }
                        </td>
                        <td> 
                        @if (@dr["IsApproved"].ToString() == "Approve")
                        {
                            <span class="badge bg-green-active"> @dr["IsApproved"] </span>
                        }
                        else
                        {
                            <span class="badge bg-red-active"> @dr["IsApproved"] </span>
                        } 
                        </td>
                        <td>
                            <a href="@Url.Action("ViewRegistration","Customer", new {clientCodeID = @dr["ClientCode"] } )"><i class="fa fa-eye"></i></a>
                        </td>
                    </tr>
                } <!-- for each end-->
            </tbody>
        </table>
        }

    </div>
</div>
<!-- End Data Show in Table -->