
@{
    ViewBag.Title = "DeleteUser";
}
@model MNepalWeb.Models.UserInfo

<!-- =============================================== -->
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Customer
        <small>Block/UnBlock</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-user"></i> Customer</a></li>
        <li class="active">Block/UnBlock</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Main row -->
    <div class="row">

        <!-- Start -->
        <div class="col-xs-10">
            <div class="box box-success">
                <div class="box-header with-border">
                    <h3 class="box-title"> User Status</h3>
                </div>
                <!-- /.box-header -->

                @using (Html.BeginForm("DeleteUser", "Customer", FormMethod.Post, new { @id = "DeleteUser", @class = "DeleteUser" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    if (this.ViewData["deleteUser_messsage"] != null)
                    {
                        if (this.ViewData["message_class"].ToString() == "success_info")
                        {
                            <div class="alert alert-success">
                                <button type="button" class="close" data-dismiss="alert">&times;</button>
                                <h4>Success</h4> @this.ViewData["deleteUser_messsage"]
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-danger">
                                <button type="button" class="close" data-dismiss="alert">&times;</button>
                                <h4>Error</h4> @this.ViewData["deleteUser_messsage"]
                            </div>
                        }
                    }
                    <div class="box-body">

                        <div class="row" style="display:none">
                            <div class="col-md-4 form-group">
                                <label>CClientCode</label>
                                @Html.EditorFor(model => model.ClientCode, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                            <div class="col-md-4 form-group">
                                <label>CUserName</label>
                                <input type="text" class="form-control" id="CUserName" name="txtCUserName" value="@ViewBag.CUserName">
                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 form-group">
                                <label>Name</label>
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                            <div class="col-md-4 form-group">
                                <label>Address</label>
                                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                            <div class="col-md-4 form-group">
                                <label>User Type</label>
                                @Html.EditorFor(model => model.UserType, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                        </div>
                        @Html.Hidden("OldStatus", Model.Status)
                        <div class="row">
                            <div class="col-md-6 form-group">
                                This customer is currently  @Model.Status
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label>Action</label>
                                @Html.DropDownListFor(model => model.Status, new SelectList(new[] {
                       new { Value = "Active", Text = "UnBlock"},
                       new { Value="Blocked",Text="Block" } },
                       "Value", "Text"), new { required = "required", @class = "form-control",@style= "width:380px;" })
                            </div>

                        </div>


                            <div class="row">
                                <div class="col-md-6 form-group">
                                    <label>Remarks</label><b style="color:red">*</b>
                                    <textarea name="BlockRemarks" id="BlockRemarks" maxlength="200" rows="4" cols="50" style="min-
                                                        height:50px;min-width:200px;max-height:100px;max-width:380px;" class="form-control"></textarea>
                                    <b style="color:red">*</b><b>Note Please fill out remarks </b>

                                </div>
                            </div>
                            
                            


                            </div>

                      
                        <!-- /.box-body -->
                    <div class="box-footer">
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary" name="btnCommand" value="Submit">
                        </div>
                    </div>
                }
            </div>
            <!--/.box -box-success-->

        </div>
        <!-- /.col-md-9-->
        <!-- End-->

    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<!-- =============================================== -->

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script>
    $(function () {
        $("#DeleteUser").validate({
            rules: {
                mobileNo: {
                    required: true,
                    minlength: 10,
                },
            },
            messages: {
                mobileNo: {
                    required: "requied message",
                    message: "Please enter your mobileNo",
                },
            },
            submitHandler: function (form) {
                $('#contentDeleteUser').show();
                form.submit();
            }
        });
    });

    function showHide() {
        document.getElementById("hidden").style.display = "block";
    }

    $('#submit').on('click', function (e) {
        alert('button clicked: submitting in 5 seconds')
        $('#gif').show();
        e.preventDefault();
        setTimeout(function () {
            $('#registerform').trigger('submit');
        }, 5000); // in milliseconds
    });
    $('#registerform').on('submit', function () {
        alert('form submitted')
    });
</script>

