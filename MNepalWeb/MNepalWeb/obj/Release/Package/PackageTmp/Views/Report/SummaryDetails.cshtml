<!-- Main content -->
<section class="content">
    <!-- Main row -->
    <div class="row">


        <!-- Start -->
        <div class="col-xs-12">
                     @{ if (Model.Count() > 0)
                         {

                            <div>No Of Transactions: @Model.Count()</div>
                            <br />
                                
                                <div class="container container-fluid" id="table" style="max-height:400px;overflow:auto;width:auto;">

                                    <table class="table table-bordered sticky-header">
                                        <thead>
                                            <tr>


                                                <th>Date And Time</th>
                                                <th>Transaction ID</th>
                                                <th>Source Mobile No</th>
                                                <th>Service Type</th>
                                                <th>Merchant Name</th>
                                                <th>Amount</th>



                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var item in Model)
                                            {
                                                <tr>

                                                    <td>@item.TranDate</td>
                                                    <td>@item.TxnID</td>
                                                    <td>@item.InitMobileNo</td>
                                                    <td>@item.ServiceType</td>
                                                    <td>@item.MerchantName</td>
                                                    <td style="text-align:right">@string.Format("{0:n}",item.TotalAmount)</td>
                                                </tr>
                                            }
                                        </tbody>

                                    </table>
                                

                                </div>
                         }

                    }

                   </div>
                </div>
    </section>
                 