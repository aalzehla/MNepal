            <!--REPORT-->
            <div id="data" class="box box-primary">
                <!--Report List-->
                <div class="box-body">
                    @{ if (Model.BranchInfo.Count > 0)
                        {

                            @*<span class="fa fa-2x fa-file-pdf-o pull-right" style="color:red" title="To PDF"></span>*@
                            <a href="@Url.Action("GetReport", "Report",new {Key= "BranchInfo",Format="xlx",FileName="BranchUser_Report"})" target="_blank">
                                <span class="fa fa-2x fa-file-excel-o pull-right" style="color:green" title="To Excel"></span>
                            </a>
                            <div class="container container-fluid" id="table" style="max-height:400px;overflow:auto;width:auto;">

                                <table class="table table-bordered sticky-header">
                                    <thead>

                                        <tr>
                                            <th>BranchName</th>
                                            <th>Total Customer</th>
                                            <th>Total Approved Customer</th>
                                            <th>Total UnApproved Customer</th>
                                            <th>Total Rejected Customer</th>
                                            



                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.BranchInfo)
                                        {
                                            <tr>
                                                <td>@item.BranchName</td>
                                                <td>@item.TotalCustomer</td>
                                                <td>@item.TotalApproveCustomer</td>
                                                <td>@item.TotalUnApproveCustomer</td>
                                                <td>@item.TotalRejectedCustomer</td>
                                               
                                                                                            

                                            </tr>
                                        }
                                    </tbody>

                                </table>

                            </div>

                        }

                        else
                        {

                            if (ViewBag.message != null)
                            {
                                <h5>No Records Found.</h5>
                            }

                        }
                    }
                </div>
                <!-- /.col-xs--->
                <!-- End-->
            </div>

        </div>
    </div>
    <!-- /.row -->
</section>
