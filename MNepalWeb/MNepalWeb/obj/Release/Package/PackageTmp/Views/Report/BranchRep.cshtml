    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-user"></i>Report</a></li>
        <li class="active"> BranchWise</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Main row -->
    <div class="row">

        <!-- Start -->
        <div class="col-xs-12">

            @*<div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Search Criteria for Branchwise Report</h3>
                </div>
                <!-- /.box-header -->
               
                <!--Search-->
                    <div class="box-body">
                        <br />
                        <div class="row">
                            <div class="col-md-6">
                                <span style="color:red">@ViewBag.error</span>

                            </div>
                        </div>
                        <div class="row">

                            <div class="col-md-2">
                                <div class="form-group">
                                    <label>Branch Code</label>
                                    @Html.DropDownList("Parameter.BranchCode", new SelectList(Model.Parameter.BranchList,"Key","Value"), "---SELECT---", new { @class = " form-control select2", @style = "width: 100%;" })
                                </div>
