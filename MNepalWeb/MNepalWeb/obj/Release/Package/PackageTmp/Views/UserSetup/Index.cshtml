
@{
    ViewBag.Title = "Index";
}

@model List<MNepalWeb.Models.UserProfilesInfo>
<!-- =============================================== -->
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Manage Admin
        <small>Profiles</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li class="active"> Manage Admin Profiles</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Main row -->
    <div class="row">

        <!-- Start Form -->
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Manage Admin Profiles</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">

                    <div class="row">
                        <div class="col-md-10">

                            <table id="t01" class="table table-bordered table-striped">
                                <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Status</th>
                                    <th colspan="3">Action</th>
                                </tr>
                                </thead>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.ProfileName
                                        </td>
                                        <td>
                                            @item.ProfileDesc
                                        </td>
                                        <td>
                                            @if (item.UserProfileStatus == "Active")
                                            {
                                                <span class="badge bg-green-active"> @item.UserProfileStatus </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-red-active"> @item.UserProfileStatus </span>
                                            }
                                        </td>
                                        <td style="width: 10px;">
                                            <a href="@Url.Action("EditAdminProfileSetup", "UserSetup", new {profileCode = @item.UPID})"><i class="fa fa-pencil fa-fw" title="Edit"></i></a>
                                        </td>
                                        <td style="width: 10px;">
                                            <a href="@Url.Action("ViewAdminProfileSetup", "UserSetup", new {profileCode = @item.UPID})"><i class="fa fa-eye" title="View"></i></a>
                                        </td>
                                        @*<td  style="width:10px;">
                        <a href="@Url.Action("DeleteAdminSetup", "UserSetup", new { menuAssignId = @item.MenuAssignId } )"><i class="fa fa-trash"></i></a>
                    </td>*@
                                    </tr>

                                }

                            </table>

                        </div>
                    </div>

                </div>
            </div>
        </div>
        <!--End Form -->

    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<!-- page script -->
@section scripts{
    <script>
        $(function() {
            $('#t01').DataTable();
        });
    </script>
}
<!-- =============================================== -->

