
@{
    ViewBag.Title = "CheckStatus";
}

<!-- =============================================== -->
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        MNepal Transaction Status
        <small>Status</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-user"></i> MNepalPay</a></li>
        <li class="active"> Transaction Status</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Main row -->
    <div class="row">

        <!-- Start -->

        <div class="col-xs-12">

            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">MNepal Transaction Status</h3>
                </div>
                <!-- /.box-header -->

                <div class="box-body">
                    <div class="row">

                        <div class="form-group">
                            <div id="MobileNo" class="col-md-6 form-group">
                                <label>MNepal Trace ID <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="txtTraceID" name="txtTraceID" placeholder="Trace ID">
                            </div>
                        </div>
                        <!-- /.form-group-->
                    </div>
                    <!-- /.row-->
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <input type="submit" class="btn btn-primary" id="btnSearch" name="txtSearch" value="Search" />
                </div>
                <!-- /.box-footer -->

            </div>
            <!--/.box -box-danger-->
            <!-- Start Data Show in Table -->

            @*@Html.Action("MNepalTranDetail")*@

            <!-- End Data Show in Table -->

        </div>
        <!-- /.col-xs--->
        <!-- End-->

    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<!-- =============================================== -->

@section scripts{

    <script type="text/javascript">

        $("#MNepalTranDetail").hide();
        
        $('#btnSearch').click(function (e) {

            var traceID = $('#txtTraceID').val();
            
            e.preventDefault();

            $.ajax({
                url: '@Url.Action("#","MNepalPay")',
                type: 'GET',
                data: {
                    txtTraceID: traceID
                },
                success: function (results) {
                    //debugger;
                    $('#MNepalTranDetail').html(results);
                    $("#MNepalTranDetail").show();
                },
                error: function () {
                    //debugger;
                    alert('Error Occured!!');
                }
            });

        });
    </script>
}

