@section scripts{
    <script type="text/javascript">
        var SelectedFeature = 0;

        $(document).ready(function () {
               
            if($('#HasCharge').is(':Checked'))
            {
                $('.charge td').find('input:text').removeAttr('disabled');
            }
            else
            {
                $('.charge td').find('input:text').prop('disabled', 'true');
            }

            if ($('#IsDrAlert').is(':Checked')) {
                $('.drAlert td').find('input:text').removeAttr('disabled');
            }
            else {
                $('.drAlert td').find('input:text').prop('disabled', 'true');
            }

            if ($('#IsCrAlert').is(':Checked')) {
                $('.crAlert td').find('input:text').removeAttr('disabled');
            }
            else {
                $('.crAlert td').find('input:text').prop('disabled', 'true');
            }
         
        });
      
        $('#HasCharge').click(function () {
            if ($(this).is(':Checked')) {
                $('.charge td').find('input:text').removeAttr('disabled');
            }
            else {
                $('.charge td').find('input:text').val('');
                $('.charge td').find('input:text').prop('disabled', 'true');
            }

        });

        $('#IsDrAlert').click(function () {
       
            if($(this).is(':Checked'))
            {
                $('.drAlert td').find('input:text').removeAttr('disabled');
            }
            else
            {
                $('.drAlert td').find('input:text').val('');
                $('.drAlert td').find('input:text').prop('disabled', 'true');
            }

        });

        $('#IsCrAlert').click(function () {
            if ($(this).is(':Checked')) {
                $('.crAlert td').find('input:text').removeAttr('disabled');
            }
            else {
                $('.crAlert td').find('input:text').val('');
                $('.crAlert td').find('input:text').prop('disabled', 'true');
            }

        });
        

        var rowCount = $('#tblFeature tr').length;
        var arry = [];

        function isNumber(evt) {
            evt = (evt) ? evt : window.event;
            var charCode = (evt.which) ? evt.which : evt.keyCode;
            if (charCode > 31 && (charCode < 48 || charCode > 57)) {
                return false;
            }
            return true;
        }

        $('#tblFeature input:checkbox').click(function () {
            var parntid = $(this).closest('tr').attr('id');
            var rowid=$('#' + parntid).prop('rowIndex')
            if($(this).is(':checked'))
            {
               
                var $inputTxnCount = $('<input onkeypress="return isNumber(event)" class="form-control" autocomplete="off" name="txtTxnCount' + parntid + '">', {
                    type: 'text',
                }).appendTo('#tdTxnCount' + parntid).focus();
                var $inputPerTxn = $('<input onkeypress="return isNumber(event)" class="form-control" autocomplete="off" name="txtPerTxnAmt' + parntid + '">', {
                    type: 'text',
                }).appendTo('#tdPerTxn' + parntid).focus();
                var $inputTxnPerDay = $('<input onkeypress="return isNumber(event)" class="form-control" autocomplete="off" name="txtPerDayTxnAmt' + parntid + '">', {
                    type: 'text',
                }).appendTo('#tdPerDay' + parntid).focus();
                SelectedFeature = SelectedFeature + 1;
                arry[rowid - 1] = parntid;
         

            }
            else
            {

                $('#' + parntid + ' input:text').remove();
                SelectedFeature = SelectedFeature - 1;
              
                arry[rowid - 1] = null;

            }
            $('#hidFeatures').val(arry.toString());
            $('#lblselected').text(SelectedFeature);
            
        });
    </script>
    

    <!-- Load jQuery and the validate plugin -->
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.10.2.js"></script>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.4.5/js/bootstrapvalidator.min.js'></script>

    <!-- jQuery Form Validation code -->

    <script type="text/javascript">
        /**Validation Check */
        $('#CusProfileForm').bootstrapValidator({
            feedbackIcons: {
                valid: 'glyphicon glyphicon-ok',
                invalid: 'glyphicon glyphicon-remove',
                validating: 'glyphicon glyphicon-refresh'
            },
            fields: {
                txtProfileCode: {
                    validators: {
                        notEmpty: {
                            message: 'The ProfileName is required and cannot be empty'
                        },
                        stringLength: {
                            max: 20,
                            min: 4,
                            message: 'Please Use Profile Namer'
                        }
                    }
                },
                txtProfileDesc: {
                    validators: {
                        notEmpty: {
                            message: 'The Profile Description is required and cannot be empty'
                        },
                        stringLength: {
                            max: 30,
                            min: 4,
                            message: 'Please Use the Profile Description'
                        }
                    }
                },
                txtPStatus: {
                    validators: {
                        notEmpty: {
                            message: 'The Profile Status is required and cannot be empty'
                        },
                        stringLength: {
                            max: 10,
                            min: 4,
                            message: 'Please Use the Profile Status'
                        }
                    }
                },
                txtRenewPeriod: {
                    validators: {
                        notEmpty: {
                            message: 'The RenewPeriod is required and cannot be empty'
                        },
                        stringLength: {
                            max: 10,
                            min: 4,
                            message: 'Please Use the RenewPeriod'
                        }
                    }
                }
            }
        });
    </script>

