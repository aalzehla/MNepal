
@{
    ViewBag.Title = "BranchListView";
}

@model List<MNepalWeb.Models.MNBranchTable>
<!-- =============================================== -->
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
       Branch Setup
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-user"></i> Branch Setup</a></li>
        <li class="active">Branch Modification</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Main row -->
    <div class="row">

        <!--Message-->
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @if (this.TempData["branch_message"] != null)
        {
            if (this.TempData["message_class"].ToString() == "success_info")
            {
                <div class="alert alert-success">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <h4>Success</h4> @this.TempData["branch_message"]
                </div>
            }
            else
            {
                <div class="alert alert-danger">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <h4>Error</h4> @this.TempData["registration_message"]
                </div>
            }
        }


        <div class="col-md-12">
            <div class="nav-tabs-custom">
                <div class="tab-content">
                    <div class="active tab-pane" id="activity">

                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h3 class="box-title">Branch Modification</h3>
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body">

                             

                                <table id="t01" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Branch Code</th>
                                            <th>Branch Name</th>
                                            <th>Branch Location</th>
                                            <th>Status</th>
                                            <th colspan="3">Action</th>
                                        </tr>
                                    </thead>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @item.BranchCode

                                            </td>
                                            <td>
                                                @item.BranchName

                                        </td>

                                        <td>
                                            @item.BranchLocation
                                        </td>
                                        <td>
                                            @if (@item.IsBlocked == "F")
                                            {
                                                <span class="badge bg-green-active"> Active </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-red-active"> Blocked </span>
                                            }
                                           
                                        </td>                                                                             

                                        <td>
                                            <a href="@Url.Action("BranchModification", "BranchSetup", new { BranchCode = @item.BranchCode })"><i class="fa fa-pencil fa-fw" tile="Edit"></i></a>
                                        </td>
                                    </tr>

                                    }

                                </table>

                            </div>

                        </div>


                    </div>
                    <!-- /.tab-pane -->
                </div>
            </div>
        </div>


    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<!-- =============================================== -->


