
@{
    ViewBag.Title = "UserRole Setup Modify Staff Role";
}

@model List<MNepalWeb.Models.UserProfilesInfo>
<!-- =============================================== -->
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>

        User Role Setup
        @*<small>Modify Staff/Admin Role</small>*@
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-user"></i>User Role Setup</a></li>
        <li class="active"> @*Manage Admin Profiles*@ Modify Staff Role</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Main row -->
    <div class="row">

        <!-- Start Form -->
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">@*Manage Admin Profiles*@Modify Staff Role</h3>
                </div>

                <!--Message-->
                @if (this.ViewData["admin_messsage"] != null)
                {
                    if (this.ViewData["message_class"].ToString() == "success_info")
                    {
                        <div class="alert alert-success">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <h4>Success</h4> @this.ViewData["admin_messsage"]
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <h4>Error</h4> @this.ViewData["admin_messsage"]
                        </div>
                    }
                }
                <!-- /.box-header -->
                <div class="box-body">

                    <div class="row">
                        <div class="col-md-10">

                            <table id="t01" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Status</th>
                                        <th colspan="3">Action</th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.ProfileName
                                        </td>
                                        <td>
                                            @item.ProfileDesc
                                        </td>
                                        <td>
                                            @if (item.UserProfileStatus == "Active")
                                            {
                                                <span class="badge bg-green-active"> @item.UserProfileStatus </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-red-active"> @item.UserProfileStatus </span>
                                            }
                                        </td>
                                        <td style="width: 10px;">
                                            <a href="@Url.Action("EditAdminProfileSetup", "UserRoleSetup", new {profileCode = @item.UPID})"><i class="fa fa-pencil fa-fw" title="Edit"></i></a>
                                        </td>
                                        <td style="width: 10px;">
                                            <a href="@Url.Action("ViewAdminProfileSetup", "UserRoleSetup", new {profileCode = @item.UPID})"><i class="fa fa-eye" title="View"></i></a>
                                        </td>
                                        @*<td  style="width:10px;">
                                                <a href="@Url.Action("DeleteAdminSetup", "UserSetup", new { menuAssignId = @item.MenuAssignId } )"><i class="fa fa-trash"></i></a>
                                            </td>*@
                                    </tr>

                                }

                            </table>

                        </div>
                    </div>

                </div>
            </div>
        </div>
        <!--End Form -->

    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<!-- page script -->
@section scripts{
    <script>
        $(function () {
            $('#t01').DataTable();
        });
    </script>
}
<!-- =============================================== -->
