    <div class="modal show" tabindex="-1" role="dialog" aria-hidden="true">

@using (Html.BeginForm("Index", "ForgetPassword", FormMethod.Post, new
{
    @id = "frmRecover",
    @class = "form col-md-12 center-block"
}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    if (this.ViewData["forget_message"] != null)
    {
        if (this.ViewData["message_class"].ToString() == "success_info")
        {
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <h4>Success</h4> @this.ViewData["forget_message"]
            </div>
        }
        else
        {
            <div class="alert alert-danger">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <h4>Error</h4> @this.ViewData["forget_message"]
            </div>
        }
    }
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">

                    @*<h1 class="text-center">
                        <a href="#"><b>MNepal</b>MB</a>
                    </h1>*@

                    <img src="~/Content/image/nibl.png" alt="NIBL LOGO" style="margin-left:50px">

                    <h2 class="text-center"><b>Forgot your Password?</b></h2>
                </div>
                
                <div class="modal-body">

                    <div class="form-group has-feedback">
                        <input type="text" id="userName" name="txtUserName" class="form-control" placeholder="UserName" required >
                        <label id="check">
                        </label>
                        <input type="text" id="verify" name="txtVerify" class="form-control" style="display:none;" />
                    </div>
                                                
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-lg btn-block">
                            Request Recovery Password
                        </button>
                    </div>
                    
                </div>

                <div class="modal-footer">
                    <div class="col-md-12">
                    </div>
                </div>

            </div>
        </div>
}
