@model MNepalWeb.Models.CusProfileViewModel
@{
    ViewBag.Title = "UserRole Setup Create Customer Role";
    int Sno = 0;
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        User Role Setup
        @*<small>Create Customer Role</small>*@
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-user"></i>User Role Setup</a></li>
        <li class="active">Create Customer Role</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Main row -->
    <div class="row">
        @using (Html.BeginForm("CreateCusProfile", "CustomerSetup", FormMethod.Post, new { @id = "CusProfileForm", @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            if (this.TempData["cusprofile_message"] != null)
            {
                if (this.TempData["message_class"].ToString() == "success_info")
                {
                    <div class="alert alert-success">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <h4>Success</h4> @this.TempData["cusprofile_message"]
                    </div>
                }
                else
                {
                    <div class="alert alert-danger">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <h4>Error</h4> @this.TempData["cusprofile_message"]
                    </div>
                }
            }
        <!-- Center column -->
            <div class="col-md-12">

                <!-- Horizontal Form -->
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Create Customer Role</h3>
                    </div>

                    @*<div class="box-header with-border">
                            <h3 class="box-title">Profile Information</h3>
                        </div>*@

                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-10">
                                @*<table class="table table-responsive" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Profile Information</th>
                                        </tr>
                                    </thead>
                                </table>*@
                                <div class="box-header with-border">
                                    <h3 class="box-title">Role Information</h3>
                                </div>

                                <div class="box-body">
                                    <div class="row">
                                        <div class="col-md-10">
                                            <div class="form-group">
                                                <label class="control-label col-sm-3">Role<b style="color:red;">*</b></label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" id="PCode" name="txtProfileCode" placeholder="Role Name" required maxlength="30" />
                                                    @*<label id="check"> </label>*@
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    @*<div>
                                        <br />
                                    </div>*@

                                    <div class="row">
                                        <div class="col-md-10">
                                            <div class="form-group">
                                                <label class="control-label col-sm-3">Role Description <b style="color:red;">*</b></label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" id="PDesc" name="txtProfileDesc" placeholder="Role Description" required maxlength="20" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    @*</div>*@
                                    <div>
                                        @*<br />*@
                                    </div>

                                    <div class="row" style="display:none">
                                        <div class="col-md-10">
                                            <div class="form-group">
                                                <label class="control-label col-sm-3">Role Status <b style="color:red;"></b></label>
                                                <div class="col-sm-9">
                                                    @*<input type="text" class="form-control" id="PStatus" name="txtProfileStatus" />*@
                                                    <select class="form-control select2" id="PStatus" name="txtPStatus" style="width: 100%;" @*required*@ readonly>
                                                        @*<option value="">Select</option>*@
                                                        <option value="A">Active</option>
                                                        @*<option value="B">Blocked</option>*@
                                                       
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    @*</div>*@
                                    <div>
                                        @*<br />*@
                                    </div>

                                    <div class="row">
                                        <div class="col-md-10">
                                            <div class="form-group">
                                                <label class="control-label col-sm-3">Renew Period <b style="color:red;"></b></label>
                                                <div class="col-sm-9">
                                                    <div class="input-group">
                                                        <input type="text" class="form-control" id="RenewPeriod" name="txtRenewPeriod" required onkeypress="return isNumber(event)" title="Period in month" maxlength="2" placeholder="Renew Period" />
                                                        <span class="input-group-addon" id="basic-addon2">Months</span>
                                                    </div>

                                                </div>


                                            </div>
                                        </div>
                                    </div>
                                    @*</div>*@
                                    <div>
                                        <br />
                                    </div>

                                    <div class="row">
                                        <div class="col-md-10">
                                            <div class="form-group">
                                                <label class="control-label col-sm-3">Auto Renew <b style="color:red;"></b></label>
                                                <div class="col-sm-9">
                                                    <div class="col-sm-9">
                                                        <input data-val="true"
                                                               title="If checked Profile auto renews upon expiary"
                                                               id="AutoRenew"
                                                               name="txtAutoRenew"
                                                               type="checkbox"
                                                               value="T" />
                                                    </div>
                                                    @*<input type="text" class="form-control" id="AutoRenew" name="txtAutoRenew" />*@
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                                @*</div>*@

                                <div class="box-header with-border">
                                    <h3 class="box-title">Role Charge</h3>
                                </div>

                                <div class="box-body">
                                    <div class="row">
                                        <div class="col-md-10">
                                            <table class="table  table-bordered  table-responsive" style="width:100%">
                                                <tbody>
                                                    <tr>
                                                        <th> Charge  </th>
                                                        @*<th> Has Charge </th>*@
                                                        <th> Amount </th>

                                                    </tr>

                                                    <tr class="odd gradex">

                                                        <td>Has Charge </td>

                                                        <td>
                                                            <div class="col-sm-9">
                                                                <input data-val="true"
                                                                       data-val-required="The isNewlyEnrolled field is required."
                                                                       id="HasCharge"
                                                                       name="txtHasCharge"
                                                                       type="checkbox"
                                                                       value="T"
                                                                       title="Enable charge for account" />
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <tr class="odd gradeX charge">

                                                        <td> Registration Charge </td>
                                                        <td>
                                                            <div class="col-sm-9">
                                                                <input type="text" class="form-control" id="Registration" name="txtRegistration" pattern=".{0,3}" @*required title="Please use Account Type"*@ placeholder="Registration Charge" maxlength="4" onkeypress="return isNumber(event)" />
                                                            </div>
                                                        </td>
                                                    </tr>




                                                    <tr class="odd gradex charge">

                                                        <td> PIN Reset Charge </td>

                                                        <td>
                                                            <div class="col-sm-9">
                                                                <input type="text" class="form-control" id="PIN" name="txtPIN" pattern=".{0,3}" @*required title="Please use Account Type"*@ placeholder="Pin Reset Charge" maxlength="4" onkeypress="return isNumber(event)" />
                                                            </div>
                                                        </td>

                                                    </tr>



                                                    <tr class="odd gradex charge">


                                                        <td> Renewal Charge </td>

                                                        <td>
                                                            <div class="col-sm-9">
                                                                <input type="text" class="form-control" id="Renewal" name="txtRenewal" pattern=".{0,3}" @*required title="Please use Account Type"*@ placeholder="Renewal Charge" maxlength="4" onkeypress="return isNumber(event)" />
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <tr class="odd gradex charge">

                                                        <td>Charge Account </td>

                                                        <td>
                                                            <div class="col-sm-9">
                                                                <input type="text" class="form-control" id="Charge" name="txtCharge" @*required title="Please use Account Type"*@ placeholder="Account For Charge" autocomplete="off" maxlength="14" onkeypress="return isNumber(event)" />
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <tr class="odd gradex" style="display: none;">

                                                        <td>IsDrAlert </td>
                                                        @*<td>@Html.TextBox("Has Charge", null, new { @class = "form-control" })  </td>*@
                                                        <td>
                                                            <div class="col-sm-9">
                                                                <input data-val="true"
                                                                       data-val-required="The isNewlyEnrolled field is required."
                                                                       id="IsDrAlert"
                                                                       name="txtIsDrAlert"
                                                                       type="checkbox"
                                                                       value="T"
                                                                       title="Alert when Account is Debited" />
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <tr class="odd gradex drAlert" style="display: none;">

                                                        <td>Min Dr Alert Amount </td>
                                                        @*<td>@Html.TextBox("Has Charge", null, new { @class = "form-control" })  </td>*@
                                                        <td>
                                                            <div class="col-sm-9">
                                                                <input type="text" class="form-control" id="MinDrAlertAmt" name="txtMinDrAlertAmt" onkeypress="return isNumber(event)" placeholder="Minimum Amount for Dr Alert" maxlength="4" />
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <tr class="odd gradex" style="display: none;">

                                                        <td>IsCrAlert </td>
                                                        @*<td>@Html.TextBox("Has Charge", null, new { @class = "form-control" })  </td>*@
                                                        <td>
                                                            <div class="col-sm-9">
                                                                <input data-val="true"
                                                                       data-val-required="This field is required."
                                                                       id="IsCrAlert"
                                                                       name="txtIsCrAlert"
                                                                       type="checkbox"
                                                                       value="T"
                                                                       title="Alert when Account is Credited" />
                                                            </div>
                                                        </td>
                                                    </tr>


                                                    <tr class="odd gradex crAlert" style="display: none;">
                                                        <td>Min Cr Alert Amount </td>
                                                        @*<td>@Html.TextBox("Has Charge", null, new { @class = "form-control" })  </td>*@
                                                        <td>
                                                            <div class="col-sm-9">
                                                                <input type="text" class="form-control" id="MinCrAlertAmt" name="txtMinCrAlertAmt" onkeypress="return isNumber(event)" placeholder="Minimun Amount for Cr Alert" maxlength="4" />
                                                            </div>
                                                        </td>
                                                    </tr>

                                                </tbody>
                                            </table>

                                        </div>
                                    </div>
                                </div>

                                <!--new -->

                                <div class="box-body">
                                    <div class="row">
                                        <div class="col-md-10">
                                            <fieldset>
                                                <legend>Features</legend>
                                                <span>Selected Features:<label id="lblselected">0</label></span>
                                                <table class="table  table-bordered  table-responsive" style="width:100%" id="tblFeature">
                                                    <thead>
                                                        <tr>
                                                            <th style="width:5%"></th>
                                                            <th style="width:35%">Name</th>
                                                            <th style="width:15%">TXN Count</th>
                                                            <th style="width:15%">PerTxnAmt </th>
                                                            <th style="width:15%">PerDayAmt</th>
                                                            <th style="width:15%">Txn Amt Monthly</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model.MNFeatures)
                                                        {

                                                            <tr id="@item.FeatureCode">
                                                                <td>
                                                                    <input id="@string.Format("chkBox{0}",item.FeatureCode)" name="@string.Format("chkBox{0}",item.FeatureCode)"
                                                                           type="checkbox"
                                                                           value="true" />
                                                                </td>
                                                                <td>@item.FeatureName</td>
                                                                <td id="@string.Format("tdTxnCount{0}",item.FeatureCode)"></td>
                                                                <td id="@string.Format("tdPerTxn{0}",item.FeatureCode)"></td>
                                                                <td id="@string.Format("tdPerDay{0}",item.FeatureCode)"></td>
                                                                <td id="@string.Format("tdTxnAmtM{0}",item.FeatureCode)"></td>
                                                            </tr>
                                                            break;
                                                        }
                                                    </tbody>
                                                </table>
                                            </fieldset>

                                        </div>
                                    </div>
                                </div>
                                <input type="hidden" id="hidFeatures" name="hidFeatures" />
                                @*@Html.Action("PopulateFeature")*@

                                <!--new -->

                            </div>

                            <div class="col-md-12">

                                <div class="col-md-2 form-group">
                                    <br />
                                    <input type="submit" class="btn btn-primary" id="btnSubmit" name="txtSubmit" value="Submit">
                                </div>

                            </div>


                        </div>
                    </div>
                </div>
            </div>
        }

    </div>

</section>
@section scripts{
    <script type="text/javascript">
        var SelectedFeature = 0;

        $(document).ready(function () {

            if ($('#HasCharge').is(':Checked')) {
                $('.charge td').find('input:text').removeAttr('disabled');
            }
            else {
                $('.charge td').find('input:text').prop('disabled', 'true');
            }

            if ($('#IsDrAlert').is(':Checked')) {
                $('.drAlert td').find('input:text').removeAttr('disabled');
            }
            else {
                $('.drAlert td').find('input:text').prop('disabled', 'true');
            }

            if ($('#IsCrAlert').is(':Checked')) {
                $('.crAlert td').find('input:text').removeAttr('disabled');
            }
            else {
                $('.crAlert td').find('input:text').prop('disabled', 'true');
            }

        });

        $('#HasCharge').click(function () {
            if ($(this).is(':Checked')) {
                $('.charge td').find('input:text').removeAttr('disabled');
            }
            else {
                $('.charge td').find('input:text').val('');
                $('.charge td').find('input:text').prop('disabled', 'true');
            }

        });

        $('#IsDrAlert').click(function () {

            if ($(this).is(':Checked')) {
                $('.drAlert td').find('input:text').removeAttr('disabled');
            }
            else {
                $('.drAlert td').find('input:text').val('');
                $('.drAlert td').find('input:text').prop('disabled', 'true');
            }

        });

        $('#IsCrAlert').click(function () {
            if ($(this).is(':Checked')) {
                $('.crAlert td').find('input:text').removeAttr('disabled');
            }
            else {
                $('.crAlert td').find('input:text').val('');
                $('.crAlert td').find('input:text').prop('disabled', 'true');
            }

        });


        var rowCount = $('#tblFeature tr').length;
        var arry = [];

        function isNumber(evt) {
            evt = (evt) ? evt : window.event;
            var charCode = (evt.which) ? evt.which : evt.keyCode;
            if (charCode > 31 && (charCode < 48 || charCode > 57)) {
                return false;
            }
            return true;
        }

        $('#tblFeature input:checkbox').click(function () {
            var parntid = $(this).closest('tr').attr('id');
            var rowid = $('#' + parntid).prop('rowIndex')
            if ($(this).is(':checked')) {

                var $inputTxnCount = $('<input onkeypress="return isNumber(event)" class="form-control" autocomplete="off" maxlength="4" name="txtTxnCount' + parntid + '">', {
                    type: 'text',
                }).appendTo('#tdTxnCount' + parntid).focus();
                var $inputPerTxn = $('<input onkeypress="return isNumber(event)" class="form-control" autocomplete="off" maxlength="5" name="txtPerTxnAmt' + parntid + '">', {
                    type: 'text',
                }).appendTo('#tdPerTxn' + parntid).focus();
                var $inputTxnPerDay = $('<input onkeypress="return isNumber(event)" class="form-control" autocomplete="off" maxlength="6" name="txtPerDayTxnAmt' + parntid + '">', {
                    type: 'text',
                }).appendTo('#tdPerDay' + parntid).focus();
                var $inputTxnCountM = $('<input onkeypress="return isNumber(event)" class="form-control" autocomplete="off" maxlength="6" name="txtTxnAmtM' + parntid + '">', {
                    type: 'text',
                }).appendTo('#tdTxnAmtM' + parntid).focus();
                SelectedFeature = SelectedFeature + 1;
                arry[rowid - 1] = parntid;



            }
            else {

                $('#' + parntid + ' input:text').remove();
                SelectedFeature = SelectedFeature - 1;

                arry[rowid - 1] = null;

            }
            $('#hidFeatures').val(arry.toString());
            $('#lblselected').text(SelectedFeature);

        });
    </script>


    <!-- Load jQuery and the validate plugin -->
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.10.2.js"></script>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.4.5/js/bootstrapvalidator.min.js'></script>

    <!-- jQuery Form Validation code -->

    <script type="text/javascript">

        $('#PCode').change(function () {

            var PCode = $('#PCode').val();

                $.ajax({
                    url: '@Url.Action("CheckCustProfile", "CustomerSetup")',
                    data: { 'ProfileCode': PCode },
                    type: 'Get',
                    success: function (data) {
                        if (data == "True") {
                            $('#check').html("");
                            $('#check').css("color", "green");
                            $('#check').html("Valid").show();
                            $('#Submit').show();

                        }
                        else {
                            $('#check').html("");
                            $('#check').css("color", "red");
                            $('#check').html("Role Name Already exists").show();
                            $('#Submit').hide();

                        }
                    },
                    error: function (data) {

                    }


                });

      });


        /**Validation Check */
        $('#CusProfileForm').bootstrapValidator({
            feedbackIcons: {
                valid: 'glyphicon glyphicon-ok',
                invalid: 'glyphicon glyphicon-remove',
                validating: 'glyphicon glyphicon-refresh'
            },
            fields: {
                txtProfileCode: {
                    validators: {
                        notEmpty: {
                            message: 'The Role is required and cannot be empty'
                        },
                        stringLength: {
                            max: 20,
                            min: 4,
                            message: 'Please Use Role Name'
                        },
                         regexp: {
                            regexp: /^[\w\-\s]+$/,
                            message: 'Only Alphanumeric accepted'
                        }
                    }
                },
                txtProfileDesc: {
                    validators: {
                        notEmpty: {
                            message: 'The Role Description is required and cannot be empty'
                        },
                        stringLength: {
                            max: 30,
                            min: 4,
                            message: 'Please Use the Role Description'
                        }
                    }
                },
                txtPStatus: {
                    validators: {
                        notEmpty: {
                            message: 'The Profile Status is required and cannot be empty'
                        }

                    }
                },
                txtRenewPeriod: {
                    validators: {
                        notEmpty: {
                            message: 'The Renew Period is required and cannot be empty'
                        }

                    }
                }
            }
        });
    </script>.


}





