@model MNepalWeb.Models.CusProfileViewModel
@{
    ViewBag.Title = "EditCusProfile";
    int Sno = 0;
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
       UserRole Setup
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>UserRole Setup</a></li>
        <li class="active">Modify Customer Role</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Main row -->
    <div class="row">
        @using (Html.BeginForm("EditCostumerProfile", "CustomerSetup", FormMethod.Post, new { @id = "CusProfileForm", @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            if (this.TempData["cusprofile_message"] != null)
            {
                if (this.TempData["message_class"].ToString() == "success_info")
                {
                    <div class="alert alert-success">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <h4>Success</h4> @this.TempData["cusprofile_message"]
                    </div>
                }
                else
                {
                    <div class="alert alert-danger">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <h4>Error</h4> @this.TempData["cusprofile_message"]
                    </div>
                }
            }
        <!-- Center column -->
            <div class="col-md-12">

                <!-- Horizontal Form -->
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Modify Customer Role</h3>
                    </div>

                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-10">
                                <div class="box-header with-border">
                                    <h3 class="box-title">Role Information</h3>
                                </div>

                                <div class="box-body">
                                    <div class="row">
                                        <div class="col-md-10">
                                            <div class="form-group">
                                                <label class="control-label col-sm-3">Role <b style="color:red;"></b></label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" id="PCode" name="txtProfileCode" value="@Model.ProfileCode" readonly />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div>
                                        <br />
                                    </div>

                                    <div class="row">
                                        <div class="col-md-10">
                                            <div class="form-group">
                                                <label class="control-label col-sm-3">Role Description <b style="color:red;">*</b></label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" id="PDesc" name="txtProfileDesc" value="@Model.ProfileDesc" required  maxlength="20"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    @*</div>*@
                                    <div>
                                        <br />
                                    </div>

                                    <div class="row">
                                        <div class="col-md-10">
                                            <div class="form-group">
                                                <label class="control-label col-sm-3">Role Status <b style="color:red;">*</b></label>
                                                <div class="col-sm-9">
                                                    @*<input type="text" class="form-control" id="PStatus" name="txtProfileStatus" />*@
                                                    <select class="form-control select2" id="PStatus" name="txtPStatus" style="width: 100%;">
                                                        <option value="" hidden>Select</option>
                                                        <option value="A" @(Model.ProfileStatus.ToString() == "A" ? "Selected" : string.Empty)>Active</option>
                                                        <option value="B" @(Model.ProfileStatus.ToString() == "B" ? "Selected" : string.Empty)>Blocked</option>
                                                     
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    @*</div>*@
                                    <div>
                                        <br />
                                    </div>

                                    <div class="row">
                                        <div class="col-md-10">
                                            <div class="form-group">
                                                <label class="control-label col-sm-3">Renew Period <b style="color:red;"></b></label>
                                                <div class="col-sm-9">
                                                    <div class="input-group">
                                                        <input type="text" class="form-control" id="RenewPeriod" name="txtRenewPeriod" required onkeypress="return isNumber(event)" title="Period in month" placeholder="Renew Period" maxlength="2" value="@Model.RenewPeriod" />
                                                        <span class="input-group-addon" id="basic-addon2">Months</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    @*</div>*@
                                    <div>
                                        <br />
                                    </div>

                                    <div class="row">
                                        <div class="col-md-10">
                                            <div class="form-group">
                                                <label class="control-label col-sm-3">Auto Renew <b style="color:red;"></b></label>
                                                <div class="col-sm-9">
                                                    <div class="col-sm-9">
                                                        <input data-val="true"
                                                               title="If checked Profile auto renews upon expiary"
                                                               id="AutoRenew"
                                                               name="txtAutoRenew"
                                                               type="checkbox"
                                                               value="T" @(Model.AutoRenew.ToString() == "T" ? "Checked" : string.Empty) />
                                                    </div>
                                                    @*<input type="text" class="form-control" id="AutoRenew" name="txtAutoRenew" />*@
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                @*</div>*@

                                <div class="box-header with-border">
                                    <h3 class="box-title">Role Charge</h3>
                                </div>
                                <div class="box-body">
                                    <div class="row">
                                        <div class="col-md-10">
                                            <table class="table  table-bordered  table-responsive" style="width:100%">
                                                <tbody>
                                                    <tr>
                                                        <th> Charge  </th>
                                                        @*<th> Has Charge </th>*@
                                                        <th> Amount </th>

                                                    </tr>
                                                    <tr class="odd gradex">

                                                        <td>Has Charge </td>

                                                        <td>
                                                            <div class="col-sm-9">
                                                                <input data-val="true"
                                                                       data-val-required="The isNewlyEnrolled field is required."
                                                                       id="HasCharge"
                                                                       name="txtHasCharge"
                                                                       type="checkbox"
                                                                       value="T" @(Model.HasCharge.ToString() == "T" ? "Checked" : string.Empty) />
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <tr class="odd gradeX charge">

                                                        <td> Registration Charge </td>

                                                        <td>
                                                            <div class="col-sm-9">
                                                                <input type="text" class="form-control" id="Registration" name="txtRegistration"  @*required title="Please use Account Type"*@ placeholder="Registration Charge" value="@Model.Registration" onkeypress="return isNumber(event)" maxlength="4" />
                                                            </div>
                                                        </td>
                                                    </tr>

                                                    <tr class="odd gradex charge">

                                                        <td> PIN Reset Charge </td>

                                                        <td>
                                                            <div class="col-sm-9">
                                                                <input type="text" class="form-control" id="PIN" name="txtPIN" onkeypress="return isNumber(event)"  @*required title="Please use Account Type"*@ placeholder="Pin Reset Charge" value="@Model.PinReset" maxlength="4" />
                                                            </div>
                                                        </td>

                                                    </tr>


                                                    <tr class="odd gradex charge">

                                                        <td> Renewal Charge </td>

                                                        <td>
                                                            <div class="col-sm-9">
                                                                <input type="text" class="form-control" id="Renewal" name="txtRenewal" onkeypress="return isNumber(event)"  @*required title="Please use Account Type"*@ placeholder="Renewal Charge" value="@Model.ReNew" maxlength="4" />
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <tr class="odd gradex charge">
                                                        <td>Charge Account </td>
                                                        @*<td>@Html.TextBox("Has Charge", null, new { @class = "form-control" })  </td>*@
                                                        <td>
                                                            <div class="col-sm-9">
                                                                <input type="text" class="form-control" id="Charge" name="txtCharge" onkeypress="return isNumber(event)" @*required title="Please use Account Type"*@ placeholder="Charge Account" value="@Model.ChargeAccount" maxlength="14"/>
                                                            </div>
                                                        </td>
                                                    </tr>

                                                    <tr class="odd gradex hide">

                                                        <td>IsDrAlert </td>
                                                        @*<td>@Html.TextBox("Has Charge", null, new { @class = "form-control" })  </td>*@
                                                        <td>
                                                            <div class="col-sm-9">
                                                                <input data-val="true"
                                                                       data-val-required="The isNewlyEnrolled field is required."
                                                                       id="IsDrAlert"
                                                                       name="txtIsDrAlert"
                                                                       type="checkbox"
                                                                       value="T" @(Model.IsDrAlert.ToString() == "T" ? "Checked" : string.Empty) />
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <tr class="odd gradex drAlert" style="display:none;">

                                                        <td>Min Dr Alert Amount </td>
                                                        @*<td>@Html.TextBox("Has Charge", null, new { @class = "form-control" })  </td>*@
                                                        <td>
                                                            <div class="col-sm-9">
                                                                <input type="text" class="form-control" id="MinDrAlertAmt" name="txtMinDrAlertAmt" value="@Model.MinDrAlertAmt" placeholder="Min DR amount for Dr alert" maxlength="4" onkeypress="return isNumber(event)"/>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <tr class="odd gradex hide">

                                                        <td>IsCrAlert </td>
                                                        @*<td>@Html.TextBox("Has Charge", null, new { @class = "form-control" })  </td>*@
                                                        <td>
                                                            <div class="col-sm-9">
                                                                <input data-val="true"
                                                                       data-val-required="The isNewlyEnrolled field is required."
                                                                       id="IsCrAlert"
                                                                       name="txtIsCrAlert"
                                                                       type="checkbox"
                                                                       value="T" @(Model.IsCrAlert.ToString() == "T" ? "Checked" : string.Empty) />
                                                            </div>
                                                        </td>
                                                    </tr>


                                                    <tr class="odd gradex crAlert hide">
                                                        <td>Min Cr Alert Amount </td>
                                                        @*<td>@Html.TextBox("Has Charge", null, new { @class = "form-control" })  </td>*@
                                                        <td>
                                                            <div class="col-sm-9">
                                                                <input type="text" class="form-control" id="MinCrAlertAmt" name="txtMinCrAlertAmt" value="@Model.MinCrAlertAmt" placeholder="Min CR amount for Dr alert" onkeypress="return isNumber(event)" maxlength="4"/>
                                                            </div>
                                                        </td>
                                                    </tr>

                                                </tbody>
                                            </table>


                                        </div>
                                    </div>
                                </div>

                                <!--new -->

                                <div class="box-body">
                                    <div class="row">
                                        <div class="col-md-10">
                                            <fieldset>
                                                <legend>Features</legend>
                                                <span>Selected Features:<label id="lblselected">0</label></span>
                                                <table class="table  table-bordered  table-responsive" style="width:100%" id="tblFeature">
                                                    <thead>
                                                        <tr>
                                                            <th style="width:5%"></th>
                                                            <th style="width:35%">Name</th>
                                                            <th style="width:15%">TXN Count</th>
                                                            <th style="width:15%">PerTxnAmt </th>
                                                            <th style="width:15%">PerDayAmt</th>
                                                            <th style="width:15%">TXN Amt Monthly</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model.MNFeatures)
                                                        {

                                                            <tr id="@item.FeatureCode">
                                                                <td>
                                                                    <input id="@string.Format("chkBox{0}", item.FeatureCode)" name="@string.Format("chkBox{0}", item.FeatureCode)"
                                                                           type="checkbox"
                                                                           value="true"
                                                                           @(item.IsSelected.ToString() == "T" ? "Checked" : string.Empty) />
                                                                </td>
                                                                <td>@item.FeatureName</td>
                                                                <td id="@string.Format("tdTxnCount{0}", item.FeatureCode)">
                                                                    @{if (item.IsSelected.ToString() == "T")
                                                                        {
                                                                            <input type="text" value="@item.TxnCount" class="form-control" onkeypress="return isNumber(event)" maxlength="4" name="@string.Format("txtTxnCount{0}",item.FeatureCode)" />
                                                                        }
                                                                    }
                                                                </td>

                                                                <td id="@string.Format("tdPerTxn{0}",item.FeatureCode)">
                                                                    @{if (item.IsSelected.ToString() == "T")
                                                                        {
                                                                            <input type="text" value="@item.PerTxnAmt" class="form-control" onkeypress="return isNumber(event)" maxlength="5" name="@string.Format("txtPerTxnAmt{0}",item.FeatureCode)" />
                                                                        }
                                                                    }
                                                                </td>

                                                                <td id="@string.Format("tdPerDay{0}",item.FeatureCode)">
                                                                    @{if (item.IsSelected.ToString() == "T")
                                                                        {
                                                                            <input type="text" value="@item.PerDayTxnAmt" class="form-control" onkeypress="return isNumber(event)" maxlength="6" name="@string.Format("txtPerDayTxnAmt{0}",item.FeatureCode)" />
                                                                        }
                                                                    }
                                                                </td>

                                                                <td id="@string.Format("tdTxnAmtM{0}", item.FeatureCode)">
                                                                    @{if (item.IsSelected.ToString() == "T")
                                                                        {
                                                                            <input type="text" value="@item.TxnAmtM" class="form-control" onkeypress="return isNumber(event)" maxlength="6" name="@string.Format("txtTxnAmtM{0}",item.FeatureCode)" />
                                                                        }
                                                                    }
                                                                </td>

                                                            </tr>
                                                             break;
                                              }
                                                    </tbody>
                                                </table>
                                            </fieldset>

                                        </div>
                                    </div>
                                </div>
                                <input type="hidden" id="hidFeatures" name="hidFeatures" />
                                @*@Html.Action("PopulateFeature")*@

                                <!--new -->



                            </div>




                            <div class="col-md-12">



                                <div class="col-md-2 form-group">
                                    <br />
                                    <input type="submit" class="btn btn-primary" id="btnSubmit" name="txtSubmit" value="Submit">
                                </div>

                            </div>


                        </div>
                    </div>
                </div>
            </div>
                                                                        }

    </div>

</section>
@section scripts{
    <script type="text/javascript">
        var SelectedFeature = 0;
        var arry = [];
        var rowCount = $('#tblFeature tr').length;
        $(document).ready(function () {


            $('#tblFeature').find('tr').each(function () {
                //debugger;
                var row = $(this);
                if (row.find('input[type="checkbox"]').is(':checked')) {
                    var rowid = $(this).prop('rowIndex');
                    var id = $(this).attr('id');
                    arry[rowid - 1] = id;
                    SelectedFeature = SelectedFeature + 1;

                }

            });
            $('#hidFeatures').val(arry.toString());
            $('#lblselected').text(SelectedFeature);



            if ($('#HasCharge').is(':Checked')) {
                $('.charge td').find('input:text').removeAttr('disabled');
            }
            else {
                $('.charge td').find('input:text').val('');
                $('.charge td').find('input:text').prop('disabled', 'true');
            }

            if ($('#IsDrAlert').is(':Checked')) {
                $('.drAlert td').find('input:text').removeAttr('disabled');
            }
            else {
                $('.drAlert td').find('input:text').val('');
                $('.drAlert td').find('input:text').prop('disabled', 'true');
            }

            if ($('#IsCrAlert').is(':Checked')) {
                $('.crAlert td').find('input:text').removeAttr('disabled');
            }
            else {
                $('.crAlert td').find('input:text').val('');
                $('.crAlert td').find('input:text').prop('disabled', 'true');
            }

        });

        

        $('#HasCharge').click(function () {
            if ($(this).is(':Checked')) {
                $('.charge td').find('input:text').removeAttr('disabled');
            }
            else {
                $('.charge td').find('input:text').val('');
                $('.charge td').find('input:text').prop('disabled', 'true');
            }

        });

        $('#IsDrAlert').click(function () {

            if ($(this).is(':Checked')) {
                $('.drAlert td').find('input:text').removeAttr('disabled');
            }
            else {
                $('.drAlert td').find('input:text').val('');
                $('.drAlert td').find('input:text').prop('disabled', 'true');
            }

        });

        $('#IsCrAlert').click(function () {
            if ($(this).is(':Checked')) {
                $('.crAlert td').find('input:text').removeAttr('disabled');
            }
            else {
                $('.crAlert td').find('input:text').val('');
                $('.crAlert td').find('input:text').prop('disabled', 'true');
            }

        });



        function isNumber(evt) {
            evt = (evt) ? evt : window.event;
            var charCode = (evt.which) ? evt.which : evt.keyCode;
            if (charCode > 31 && (charCode < 48 || charCode > 57)) {
                return false;
            }
            return true;
        }

        $('#tblFeature input:checkbox').click(function () {
            var parntid = $(this).closest('tr').attr('id');
            var rowid = $('#' + parntid).prop('rowIndex');
            if ($(this).is(':checked')) {

                var $inputTxnCount = $('<input onkeypress="return isNumber(event)" class="form-control" maxlength="4" name="txtTxnCount' + parntid + '">', {
                    type: 'text',
                }).appendTo('#tdTxnCount' + parntid).focus();
                var $inputPerTxn = $('<input onkeypress="return isNumber(event)" class="form-control"  maxlength="5" name="txtPerTxnAmt' + parntid + '">', {
                    type: 'text',
                }).appendTo('#tdPerTxn' + parntid).focus();
                var $inputTxnPerDay = $('<input onkeypress="return isNumber(event)" class="form-control" maxlength="6" name="txtPerDayTxnAmt' + parntid + '">', {
                    type: 'text',
                }).appendTo('#tdPerDay' + parntid).focus();
                var $inputTxnCountM = $('<input onkeypress="return isNumber(event)" class="form-control" maxlength="6" name="txtTxnAmtM' + parntid + '">', {
                    type: 'text',
                }).appendTo('#tdTxnAmtM' + parntid).focus();
                SelectedFeature = SelectedFeature + 1;
                arry[rowid - 1] = parntid;


            }
            else {

                $('#' + parntid + ' input:text').remove();
                SelectedFeature = SelectedFeature - 1;

                arry[rowid - 1] = null;

            }
            $('#hidFeatures').val(arry.toString());
            $('#lblselected').text(SelectedFeature);

            
        });
    </script>
}





