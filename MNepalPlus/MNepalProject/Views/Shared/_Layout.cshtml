@using Microsoft.AspNet.Identity
<!DOCTYPE html>

<html lang="en" class="no-js" data-ng-app="MNepal">

<!-- start: HEAD -->
<head>
    <title>MNepal</title>
    <!-- start: META -->
    <meta charset="utf-8" />
    <!--[if IE]><meta http-equiv='X-UA-Compatible' content="IE=edge,IE=9,IE=8,chrome=1" /><![endif]-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta content="" name="description" />
    <meta content="" name="author" />
    <!-- end: META -->
    @Styles.Render("~/Content/ClipOneCss/css")
    @Scripts.Render("~/bundles/modernizr")
    @*<link rel="shortcut icon" href="~/Content/favicon.ico" />*@
    <link rel="shortcut icon" type="image/ico" href="/MNepal/Content/images/logo.ico">
    
    <style>
        .icon {
            max-width: 40%;
            max-height: 40%;
        }

        ul.main-navigation-menu > li.active > a {
            background: #287DA5 !important;
            border-top: none !important;
            color: #fff;
        }

        #header {
            background: rgb(219, 219, 219);
        }

    </style>
</head>
<!-- end: HEAD -->
<!-- start: BODY -->
<body>
    <!-- start: HEADER -->
    <div class="navbar navbar-inverse navbar-fixed-top" id="header">
        <!-- start: TOP NAVIGATION CONTAINER -->
        <div class="container">
            <div class="navbar-header">
                <!-- start: RESPONSIVE MENU TOGGLER -->
                <button data-target=".navbar-collapse" data-toggle="collapse" class="navbar-toggle" type="button">
                    <span class="clip-list-2"></span>
                </button>
                <!-- end: RESPONSIVE MENU TOGGLER -->
                <!-- start: LOGO -->
                <a class="navbar-brand" href="../DashBoard/Board">
                    <img src="/MNepal/Content/images/logo1.png" class="icon" />
                </a>
                <!-- end: LOGO -->
            </div>
            <div class="navbar-tools">
                <ul class="nav navbar-right">
                    <li>@Html.Partial("_LoginPartial")</li>
                </ul>
            </div>
        </div>
        <!-- end: TOP NAVIGATION CONTAINER -->
    </div>
    <!-- end: HEADER -->
    <!-- start: MAIN CONTAINER -->
    <div class="main-container">
        <div class="navbar-content">
            <!-- start: SIDEBAR -->
            <div class="main-navigation navbar-collapse collapse">

                <!-- start: MAIN MENU TOGGLER BUTTON -->
                <div class="navigation-toggler">   
                    <i class="clip-chevron-left"></i>
                    <i class="clip-chevron-right"></i>
                </div>
                <!-- end: MAIN MENU TOGGLER BUTTON -->

                <!-- start: MAIN NAVIGATION MENU -->
                <ul class="main-navigation-menu">
                    <li>
                        <a href="@Url.Action("Board","DashBoard")" title="DashBoard">
                            <i class="clip-home-3"></i>
                            <span class="title">DashBoard </span><span class="selected"></span>
                        </a>
                    </li>                   
                    <li class="list-group active open">
                        <a href="#" title="Financial Transaction">
                            <i class="clip-transfer"></i>
                            <span class="title">Financial Transaction</span>
                        </a>
                        <ul class="sub-menu">                          
                            <li><a href="@Url.Action("FundTransfer","Transaction")">FundTransfer</a></li>
                            <li><a href="@Url.Action("Coupon","Transaction")">Coupon</a></li>
                            <li><a href="@Url.Action("UtilityPayment","Transaction")">Utility Payment</a></li>
                            <li><a href="@Url.Action("MerchantPayment","Transaction")">Merchant Payment</a></li>
                        </ul>
                    </li>
                    <li class="list-group active open">
                        <a href="#" title="Non-Financial Transaction">
                            <i class="clip-file"></i>
                            <span class="title">Non-Financial Transaction</span>
                        </a>
                        <ul class="sub-menu">
                            <li><a href="@Url.Action("BalanceQuery","Transaction")">Balance Query</a></li>
                            <li><a href="@Url.Action("MiniStatement","Transaction")">Mini Statement</a></li>
                            <li><a href="@Url.Action("ChangePin","Transaction")">Change Pin</a></li>
                        </ul>
                    </li>
                    <li class="list-group active open">
                        <a href="#" title="Other">
                            <i class="clip-file"></i>
                            <span class="title">Other</span>
                        </a>
                        @{
                            HttpCookie authCookie = HttpContext.Current.Request.Cookies[FormsAuthentication.FormsCookieName];
                            FormsAuthenticationTicket authTicket = FormsAuthentication.Decrypt(authCookie.Value);
                            <ul class="sub-menu">
                                <li><a href="#">Settings</a></li>
                                <li><a href="#">About</a></li>
                                @if (authTicket.UserData == "True")
                                {                               
                                <li><a href="/Account/Register">Register</a></li>                          
                                }
                            </ul>
                        }
                    </li>
                    <li>
                        <a href="/MNepal/MNCashInOut/CashIn">
                            <i class="clip-pencil-2"></i>
                            <span class="title">CashIn</span>
                        </a>
                    </li>
                    <li>
                        <a href="/MNepal/MNCashInOut/CashOut">
                            <i class="clip-pencil-2"></i>
                            <span class="title">CashOut</span>
                        </a>
                    </li>

                </ul>
                <!-- end: MAIN NAVIGATION MENU -->
            </div>
            <!-- end: SIDEBAR -->
        </div>
        <!-- start: PAGE -->
        <div class="main-content">
          
            <div class="container">
                <!-- start: PAGE HEADER -->
                <div class="row">
                    <div class="col-sm-12">

                        <!-- start: PAGE TITLE & BREADCRUMB -->
                        <div id="pagetitle">
                            @if (IsSectionDefined("PageTitle"))
                            {
                                @RenderSection("PageTitle", required: false)
                            }
                        </div>

                        <div class="page-header">
                            <h1> <small></small></h1>
                        </div>
                        <!-- end: PAGE TITLE & BREADCRUMB -->
                    </div>
                </div>
                <!-- end: PAGE HEADER -->

                <!-- start: PAGE CONTENT -->
                <div class="row">
                    <div class="col-md-12">
                        <!-- start: INBOX PANEL -->
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <i class="icon-external-link-sign"></i>                               
                            </div>
                            <div class="panel-body">
                                @RenderBody()

                            </div>
                        </div>
                    </div>
                    <!-- end: INBOX PANEL -->
                </div>
            </div>
            <!-- end: PAGE CONTENT-->
        </div>
    </div>
    <!-- end: PAGE -->
    <!-- end: MAIN CONTAINER -->
    <!-- start: FOOTER -->
    <div class="footer clearfix">
        <div class="footer-inner">
            &#64;@DateTime.Now.ToString("yyyy/MM/dd") &copy; Mercantile.
        </div>
        <div class="footer-items">
            <span class="go-top"><i class="clip-chevron-up"></i></span>
        </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/ClipOne")
        @Scripts.Render("~/angjs")
        @RenderSection("scripts", required: false)
        <script>
            jQuery(document).ready(function () {
                Main.init();
            });
        </script>
    </div>
  
</body>
<!-- end: BODY -->
</html>