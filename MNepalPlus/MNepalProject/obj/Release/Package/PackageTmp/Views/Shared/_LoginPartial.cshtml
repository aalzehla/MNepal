@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOut", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
   @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">

        <li data-ng-model="balance">
           <a href><div id="bal" balance></div></a> 
        </li>      
        @*<li data-ng-model="balance">
            <a href="" >balance  {{balance}}</a>
        </li>*@
        <li>
            <!--Manage,Account section of Default template-->
            <a href="../Account/Profile" title="Manage">Hello!! @User.Identity.GetUserName()</a>
            @*@Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Profile", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })*@
        </li>

        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>


    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
